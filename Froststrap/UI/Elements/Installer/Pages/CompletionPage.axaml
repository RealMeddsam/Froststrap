<UserControl x:Class="Froststrap.UI.Elements.Installer.Pages.CompletionPage"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
             xmlns:resources="clr-namespace:Froststrap.Resources"
             xmlns:vm="clr-namespace:Froststrap.UI.ViewModels.Installer"
            x:DataType="vm:CompletionViewModel"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

	<ScrollViewer>
		<StackPanel Margin="0,0,14,14" Spacing="8">
			<TextBlock FontSize="14"
                       Text="{x:Static resources:Strings.Installer_Completion_Text}"
                       TextWrapping="Wrap"
                       Margin="0,8,0,8" />

			<ui:SettingsExpander Header="{x:Static resources:Strings.Installer_Completion_Settings_Title}"
                                 Description="{x:Static resources:Strings.Installer_Completion_Settings_Description}"
                                 IconSource="Settings"
                                 Command="{Binding LaunchSettingsCommand}"
                                 IsClickEnabled="True"
                                 ActionIconSource="ChevronRight" />

			<ui:SettingsExpander Header="{x:Static resources:Strings.Installer_Completion_Launch_Title}"
                                 Description="{x:Static resources:Strings.Installer_Completion_Launch_Description}"
                                 IconSource="Play"
                                 Command="{Binding LaunchRobloxCommand}"
                                 IsClickEnabled="True"
                                 ActionIconSource="ChevronRight" />
		</StackPanel>
	</ScrollViewer>
</UserControl>