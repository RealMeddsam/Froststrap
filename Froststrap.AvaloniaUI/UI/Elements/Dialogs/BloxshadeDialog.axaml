<base:AvaloniaWindow x:Class="Froststrap.UI.Elements.Dialogs.BloxshadeDialog"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="using:FluentAvalonia.UI.Controls"
        xmlns:base="clr-namespace:Froststrap.UI.Elements.Base"
        xmlns:resources="clr-namespace:Froststrap.Resources"
        mc:Ignorable="d"
        Title="Froststrap"
        MinWidth="380"
        Width="380"
        SizeToContent="Height"
        CanResize="False"
        WindowStartupLocation="CenterScreen">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<fa:TitleBar Grid.Row="0"
                     Title="Froststrap"
                     IconSource="avares://Froststrap.AvaloniaUI/Resources/IconFroststrap.ico"
                     IsMaximizeButtonEnabled="False"
                     IsMinimizeButtonEnabled="False" />

		<Grid Grid.Row="1">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="*" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>

			<TextBlock Grid.Row="0"
                       Text="{x:Static resources:Strings.Dialog_Bloxshade_ThankYou}"
                       FontSize="16" FontWeight="SemiBold"
                       Margin="0,16,0,0" HorizontalAlignment="Center" />

			<TextBlock Grid.Row="1"
                       Text="{x:Static resources:Strings.Dialog_Bloxshade_Setting}"
                       FontSize="14" Margin="0,0,0,12" Padding="3"
                       HorizontalAlignment="Center"
                       Foreground="{DynamicResource TextFillColorTertiaryBrush}" />

			<Border Grid.Row="2" Margin="0,15,0,0" Padding="10"
                    Background="{DynamicResource SolidBackgroundFillColorSecondaryBrush}">
				<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
					<Button MinWidth="100"
                            Content="{x:Static resources:Strings.Common_Close}"
                            Click="Close_Click" />
				</StackPanel>
			</Border>
		</Grid>
	</Grid>
</base:AvaloniaWindow>