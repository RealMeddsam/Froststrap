<base:WpfUiWindow x:Class="Bloxstrap.UI.Elements.Help.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pages="clr-namespace:Bloxstrap.UI.Elements.Help.Pages"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:base="clr-namespace:Bloxstrap.UI.Elements.Base"
             xmlns:resources="clr-namespace:Bloxstrap.Resources"
             mc:Ignorable="d"
             Title="Help Page"
             Background="{ui:ThemeResource ApplicationBackgroundBrush}"
             MinWidth="800"
             Width="800"
             Height="600"
             ExtendsContentIntoTitleBar="True"
             WindowBackdropType="Mica"
             WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.Background>
            <DynamicResource ResourceKey="WindowBackgroundGradient" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <ui:TitleBar Padding="8" x:Name="RootTitleBar" Grid.Row="0" 
                     ForceShutdown="False" MinimizeToTray="False" 
                     UseSnapLayout="True" 
                     Title="Help Page" 
                     Icon="pack://application:,,,/Bloxstrap.ico" />

        <Grid x:Name="RootGrid" Grid.Row="1" Margin="12,12,0,0" Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Navigation control -->
            <ui:NavigationCompact x:Name="RootNavigation" Grid.Row="1" Grid.Column="0" Margin="0,0,12,0" Frame="{Binding ElementName=RootFrame}" SelectedPageIndex="0">
                <ui:NavigationCompact.Items>
                    <ui:NavigationItem Content="Information" PageType="{x:Type pages:InfoPage}" Icon="QuestionCircle48" Tag="info" Margin="0,0,0,12" />
                    <ui:NavigationItem Content="FastFlag Guide" PageType="{x:Type pages:FastFlagGuidePage}" Icon="BookAdd24" Tag="fastflagsguide" Margin="0,0,0,12" />
                    <ui:NavigationItem Content="Common FastFlag Issues" PageType="{x:Type pages:CommonFastFlagIssuesPage}" Icon="Flag28" Tag="commonfastflagissues" Margin="0,0,0,12" />
                    <ui:NavigationItem Content="Common Bootstrapper Issues" PageType="{x:Type pages:CommonBootstrapperIssuesPage}" Icon="TaskListSquareSettings20" Tag="commonbootstrapperissues" Margin="0,0,0,12" />
                    <ui:NavigationItem Content="Features" PageType="{x:Type pages:FeaturesPage}" Icon="Lightbulb24" Tag="features" Margin="0,0,0,12" />
                </ui:NavigationCompact.Items>
            </ui:NavigationCompact>

            <!-- Content Frame -->
            <Frame x:Name="RootFrame" Grid.Row="1" Grid.Column="1" />
        </Grid>
    </Grid>
</base:WpfUiWindow>