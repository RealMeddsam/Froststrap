                    <TextBlock
                        Margin="0,2,0,0"
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                        Text="Apache 2.0" />
                </StackPanel>
            </ui:CardAction>
            <ui:CardAction
                Grid.Column="2"
