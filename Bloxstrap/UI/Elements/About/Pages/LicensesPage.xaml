        Grid.Column="0"
        Margin="0,8,8,0"
        Command="models:GlobalViewModel.OpenWebpageCommand"
        CommandParameter="https://github.com/sharpdx/SharpDX/blob/master/LICENSE">
                <StackPanel>
                    <TextBlock FontSize="14" Text="Voidstrap - MIT" />
                    <TextBlock
                Margin="0,2,0,0"
