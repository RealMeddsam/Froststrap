<base:WpfUiWindow x:Class="Bloxstrap.UI.Elements.ContextMenu.GameInformation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bloxstrap.UI.Elements.ContextMenu"
        xmlns:base="clr-namespace:Bloxstrap.UI.Elements.Base"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:models="clr-namespace:Bloxstrap.UI.ViewModels.ContextMenu"
        xmlns:resources="clr-namespace:Bloxstrap.Resources"
        xmlns:converters="clr-namespace:Bloxstrap.UI.Converters"
        mc:Ignorable="d"
        Title="Game Information"
        MinWidth="450"
        MinHeight="600"
        Width="500"
        Height="700"
        ResizeMode="CanResize"
        Background="{ui:ThemeResource ApplicationBackgroundBrush}"
        ExtendsContentIntoTitleBar="True"
        WindowStartupLocation="CenterScreen">

    <Grid Background="{DynamicResource WindowBackgroundGradient}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar Padding="8" Grid.Row="0" ForceShutdown="False" MinimizeToTray="False" UseSnapLayout="True" Title="Game Information" Icon="pack://application:,,,/Bloxstrap.ico" />

        <Grid Grid.Row="1" 
              Visibility="{Binding IsDataLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
              Background="Transparent">
            <ui:ProgressRing Width="60" 
                           Height="60" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
        </Grid>

        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      Padding="20"
                      Visibility="{Binding IsDataLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
            <StackPanel>
                <StackPanel Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}"
                          HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20">
                    <ui:SymbolIcon Symbol="ErrorCircle24" Width="48" Height="48" 
                                 Foreground="{DynamicResource SystemFillColorCriticalBrush}" 
                                 HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding ErrorMessage}" 
                             TextWrapping="Wrap" 
                             TextAlignment="Center"
                             Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                             HorizontalAlignment="Center"/>
                    <Button Content="Retry" 
                            Command="{Binding RefreshInformationCommand}"
                            HorizontalAlignment="Center" 
                            Margin="0,10,0,0"/>
                </StackPanel>

                <StackPanel Visibility="{Binding HasError, Converter={StaticResource InverseBooleanToVisibilityConverter}}">

                    <Border Background="{DynamicResource SystemFillColorAttentionBrush}" 
                        CornerRadius="8,8,0,0"
                        Padding="15,10"
                         VerticalAlignment="Bottom">
                        <TextBlock Text="{Binding GameName}" 
                            FontSize="18" 
                            FontWeight="SemiBold"
                            TextWrapping="Wrap"/>
                    </Border>

                    <Border CornerRadius="8" 
                            Margin="0,0,0,20"
                            Background="{DynamicResource ControlFillColorDefaultBrush}">
                        <StackPanel Margin="15">
                            <TextBlock Text="Game Details" 
                                     FontSize="14" 
                                     FontWeight="SemiBold"
                                     Margin="0,0,0,10"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Creator:" 
                                         FontWeight="SemiBold"
                                         Width="80"
                                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding CreatorName}"
                                             Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    <Image
                                        Width="14"
                                        Height="14"
                                        Margin="4,0,0,0"
                                        Source="pack://application:,,,/Resources/RobloxVerified.png"
                                        ToolTip="Verified Creator"
                                        Visibility="{Binding IsCreatorVerified, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Genre:" 
                                         FontWeight="SemiBold"
                                         Width="80"
                                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                <TextBlock Text="{Binding Genre}"
                                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Created:" 
                                         FontWeight="SemiBold"
                                         Width="80"
                                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                <TextBlock Text="{Binding CreatedDate}"
                                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Updated:" 
                                         FontWeight="SemiBold"
                                         Width="80"
                                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                <TextBlock Text="{Binding UpdatedDate}"
                                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border CornerRadius="8" 
                        Margin="0,0,0,20"
                        Background="{DynamicResource ControlFillColorDefaultBrush}">
                        <Grid Margin="15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <ui:SymbolIcon Symbol="People24" 
                                    Foreground="{DynamicResource SystemFillColorSuccessBrush}"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding PlayingCount, Converter={StaticResource NumberAbbreviationConverter}}" 
                                    FontSize="16" 
                                    FontWeight="SemiBold"
                                    HorizontalAlignment="Center"/>
                                <TextBlock Text="Playing" 
                                    FontSize="11"
                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                    HorizontalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <ui:SymbolIcon Symbol="Eye24" 
                                    Foreground="{DynamicResource SystemFillColorAttentionBrush}"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding VisitsCount, Converter={StaticResource NumberAbbreviationConverter}}" 
                                    FontSize="16" 
                                    FontWeight="SemiBold"
                                    HorizontalAlignment="Center"/>
                                <TextBlock Text="Visits" 
                                    FontSize="11"
                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                    HorizontalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <ui:SymbolIcon Symbol="Heart24" 
                                    Foreground="{DynamicResource SystemFillColorCriticalBrush}"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding FavoritesCount, Converter={StaticResource NumberAbbreviationConverter}}" 
                                    FontSize="16" 
                                    FontWeight="SemiBold"
                                    HorizontalAlignment="Center"/>
                                <TextBlock Text="Favorites" 
                                    FontSize="11"
                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                    HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <TabControl>
                        <TabItem Header="Subplaces">
                            <StackPanel Margin="15" Visibility="{Binding HasSubplaces, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <ItemsControl ItemsSource="{Binding Subplaces}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="6" 
                                                    Margin="0,0,0,8"
                                                    Background="{DynamicResource ControlFillColorDefaultBrush}">
                                                <Grid Margin="10,8">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <Border Width="40" 
                                                        Height="40" 
                                                        Background="{DynamicResource ControlFillColorDefaultBrush}"
                                                        CornerRadius="4">
                                                        <Grid>
                                                            <Image Source="{Binding ThumbnailUrl}" 
                                                               Stretch="UniformToFill"
                                                               RenderOptions.BitmapScalingMode="HighQuality">
                                                                <Image.Style>
                                                                    <Style TargetType="Image">
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding ThumbnailUrl}" Value="{x:Null}">
                                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding ThumbnailUrl}" Value="">
                                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Image.Style>
                                                            </Image>
                                                            <ui:SymbolIcon Symbol="Map24" 
                                                                     Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                                     HorizontalAlignment="Center"
                                                                     VerticalAlignment="Center">
                                                                <ui:SymbolIcon.Style>
                                                                    <Style TargetType="ui:SymbolIcon">
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding ThumbnailUrl}" Value="{x:Null}">
                                                                                <Setter Property="Visibility" Value="Visible" />
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding ThumbnailUrl}" Value="">
                                                                                <Setter Property="Visibility" Value="Visible" />
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </ui:SymbolIcon.Style>
                                                            </ui:SymbolIcon>
                                                        </Grid>
                                                    </Border>

                                                    <TextBlock Grid.Column="1" 
                                                         Text="{Binding Name}" 
                                                         VerticalAlignment="Center"
                                                         Margin="10,0,0,0"
                                                         TextWrapping="Wrap"
                                                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </TabItem>
                        <TabItem Header="Description">
                            <StackPanel Margin="15">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding GameDescription}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding GameDescription}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <TextBlock Text="{Binding GameDescription}" 
                                    TextWrapping="Wrap"
                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                        </TabItem>
                    </TabControl>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="2" Background="{DynamicResource PrimaryBackgroundColor}">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="15">
                <Button Content="Copy Game Link" 
                        Command="{Binding CopyGameLinkCommand}"
                        Margin="0,0,12,0"
                        MinWidth="80"/>
                <Button Content="Close" 
                        IsCancel="True"
                        MinWidth="80"/>
            </StackPanel>
        </Border>
    </Grid>
</base:WpfUiWindow>