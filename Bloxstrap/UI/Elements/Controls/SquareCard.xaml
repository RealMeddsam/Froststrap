<UserControl x:Class="Bloxstrap.UI.Elements.Controls.SquareCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:local="clr-namespace:Bloxstrap.UI.Elements.Controls"
             mc:Ignorable="d"
             x:Name="Control"
             Width="260" Height="260" MinHeight="260" MaxHeight="260"
             HorizontalAlignment="Stretch" VerticalAlignment="Top"
             MouseEnter="SquareCard_MouseEnter"
             MouseLeave="SquareCard_MouseLeave">

    <UserControl.Resources>
        <QuadraticEase x:Key="QuadraticEaseOut" EasingMode="EaseOut" />
        <QuadraticEase x:Key="QuadraticEaseIn" EasingMode="EaseIn" />
        <Storyboard x:Key="HoverEnterStoryboard">
            <DoubleAnimation Storyboard.TargetName="HoverScaleTransform" Storyboard.TargetProperty="ScaleX" To="1.08" Duration="0:0:0.2" EasingFunction="{StaticResource QuadraticEaseOut}" />
            <DoubleAnimation Storyboard.TargetName="HoverScaleTransform" Storyboard.TargetProperty="ScaleY" To="1.08" Duration="0:0:0.2" EasingFunction="{StaticResource QuadraticEaseOut}" />
        </Storyboard>
        <Storyboard x:Key="HoverExitStoryboard">
            <DoubleAnimation Storyboard.TargetName="HoverScaleTransform" Storyboard.TargetProperty="ScaleX" To="1.0" Duration="0:0:0.25" EasingFunction="{StaticResource QuadraticEaseIn}" />
            <DoubleAnimation Storyboard.TargetName="HoverScaleTransform" Storyboard.TargetProperty="ScaleY" To="1.0" Duration="0:0:0.25" EasingFunction="{StaticResource QuadraticEaseIn}" />
        </Storyboard>
    </UserControl.Resources>

    <Grid RenderTransformOrigin="0.5,0.5" ClipToBounds="True">
        <Grid.RenderTransform>
            <ScaleTransform x:Name="HoverScaleTransform" ScaleX="1" ScaleY="1" />
        </Grid.RenderTransform>

        <Border Padding="12" ClipToBounds="True" Height="260">
            <ui:CardControl Margin="0" Content="{Binding InnerContent, ElementName=Control}">
                <ui:CardControl.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" SharedSizeGroup="CardContent" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Category icons (left) and ButtonContent (right), aligned horizontally -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,10,0">
                            <Border Background="#19000000" BorderBrush="Transparent" CornerRadius="8" Padding="6">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CategoryIcon, ElementName=Control}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CategoryIcon, ElementName=Control}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="{Binding CategoryIcon, ElementName=Control}" FontSize="16" ToolTip="{Binding PrimaryIconToolTip, ElementName=Control}" />
                            </Border>

                            <Border Background="#19000000" BorderBrush="Transparent" CornerRadius="8" Padding="6" Margin="5,0,0,0">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SecondaryCategoryIcon, ElementName=Control}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding SecondaryCategoryIcon, ElementName=Control}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="{Binding SecondaryCategoryIcon, ElementName=Control}" FontSize="16" ToolTip="{Binding SecondaryIconToolTip, ElementName=Control}" />
                            </Border>
                        </StackPanel>

                        <ContentPresenter Grid.Row="0" Grid.Column="1" Content="{Binding ButtonContent, ElementName=Control}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,0,0" MaxWidth="96" />

                        <!-- Title and Description stacked below -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Top" Height="212" ClipToBounds="True">
                            <TextBlock FontSize="18" FontWeight="Medium" TextWrapping="Wrap" Margin="0,6,0,0" Text="{Binding Title, ElementName=Control}" HorizontalAlignment="Left">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Title, ElementName=Control}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Title, ElementName=Control}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <TextBlock FontSize="14" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" Margin="0,12,0,0" Foreground="{DynamicResource TextFillColorTertiaryBrush}" Text="{Binding Description, ElementName=Control}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Description, ElementName=Control}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Description, ElementName=Control}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </ui:CardControl.Header>
            </ui:CardControl>
        </Border>
    </Grid>
</UserControl>