<ui:UiPage x:Class="Bloxstrap.UI.Elements.Settings.Pages.PCTweaksPage"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
           xmlns:local="clr-namespace:Bloxstrap.UI.Elements.Settings.Pages"
           xmlns:controls="clr-namespace:Bloxstrap.UI.Elements.Controls"
           xmlns:dmodels="clr-namespace:Bloxstrap.UI.ViewModels.Settings"
           xmlns:resources="clr-namespace:Bloxstrap.Resources"
           mc:Ignorable="d"
           d:DataContext="{d:DesignInstance dmodels:PCTweaksViewModel, IsDesignTimeCreatable=True}"
           d:DesignHeight="1500" d:DesignWidth="800"
           Title="PCTweaksPage"
           Scrollable="True">

    <Grid Margin="0,0,14,14">
        <StackPanel>
            <TextBlock Margin="0,0,0,16"
               Text="Improve system performance by optimizing various settings. Hover over warnings for more details."
               FontSize="14"
               Foreground="{DynamicResource TextFillColorSecondaryBrush}" />

            <ui:InfoBar Margin="0,0,0,8"
                Padding="8"
                Title="{x:Static resources:Strings.Menu_FastFlagEditor_BannerTitle}"
                IsOpen="True"
                Message="{x:Static resources:Strings.Menu_FastFlagEditor_BannerText}"
                Severity="Warning"
                IsClosable="True" />

            <UniformGrid x:Name="SquareCardWrapPanel"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Top"
                         Columns="4"
                         MinWidth="200">

                <controls:SquareCard Title="Froststrap Power Plan: Maximum FPS"
                     HorizontalAlignment="Stretch"
                     Description="Imports Froststrap's custom power plan designed for the highest frame rates. Credits to Onion for creating"
                     WarningToolTip="Warning: This may cause overheating issues."
                     Categories="Performance,Warning">
                    <Button Content="Apply" Click="BtnImportMaxFPS_Click" Height="35" Width="75"/>
                </controls:SquareCard>

                <controls:SquareCard Title="Froststrap Power Plan: Low Latency"
                     HorizontalAlignment="Stretch"
                     Description="Imports Froststrap's custom power plan designed for the lowest system latency. Credits to Onion for creating"
                     WarningToolTip="Warning: This may cause overheating issues."
                     Categories="Performance,Warning">
                    <Button Content="Apply" Click="BtnImportLowLatency_Click" Height="35" Width="75"/>
                </controls:SquareCard>


                <controls:SquareCard Title="General System Optimizations"
                    HorizontalAlignment="Stretch"
                    Description="Applies various Windows optimizations for better performance, lower latency, and improved responsiveness."
                    Categories="Performance,Privacy">
                    <ui:ToggleSwitch IsChecked="{Binding GeneralOptimizationsEnabled, Mode=TwoWay}" />
                </controls:SquareCard>

                <controls:SquareCard Title="QoS Policy"
                     HorizontalAlignment="Stretch"
                     Description="Optimizes network traffic by prioritizing Roblox with Windows Quality of Service."        
                     Categories="Network">
                    <ui:ToggleSwitch IsChecked="{Binding RobloxWiFiPriorityBoost, Mode=TwoWay}" />
                </controls:SquareCard>

                <controls:SquareCard Title="Firewall Access"
                     HorizontalAlignment="Stretch"
                     Description="Allows Roblox through the Windows Firewall for improved connectivity." 
                     Categories="Network,Privacy">
                    <ui:ToggleSwitch IsChecked="{Binding AllowRobloxFirewall, Mode=TwoWay}" />
                </controls:SquareCard>

                <controls:SquareCard Title="Disable Power Saving Features"
                     HorizontalAlignment="Stretch"
                     Description="This disables some of your PC power saving features." 
                     WarningToolTip="Warning: This may cause overheating issues."
                     Categories="Performance,Warning">
                    <ui:ToggleSwitch IsChecked="{Binding DisablePowerSavingFeature, Mode=TwoWay}" />
                </controls:SquareCard>

                <controls:SquareCard Title="Intel CPU Optimization"
                     HorizontalAlignment="Stretch"
                     Description="Optimizes your Intel CPU, please dont use with AMD CPU." 
                     WarningToolTip="Warning: This may cause overheating issues."
                     Categories="CPU,Performance,Warning">
                    <ui:ToggleSwitch IsChecked="{Binding IntelOptimizationsEnabled, Mode=TwoWay}" />
                </controls:SquareCard>

                <controls:SquareCard Title="AMD CPU Optimization"
                     HorizontalAlignment="Stretch"
                     Description="Optimizes your AMD CPU, please dont use with Intel CPU." 
                     WarningToolTip="Warning: This may cause overheating issues."
                     Categories="CPU,Performance,Warning">
                    <ui:ToggleSwitch IsChecked="{Binding AmdOptimizationsEnabled, Mode=TwoWay}" />
                </controls:SquareCard>

            </UniformGrid>

            <!-- Easter Egg Button -->
            <ui:Button x:Name="EasterEggButton"
                   Width="24"
                   Height="24"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Left"
                   Margin="4"
                   ToolTip="???"
                   Opacity="0.2"
                   Click="EasterEggButton_Click" />
        </StackPanel>
    </Grid>
</ui:UiPage>