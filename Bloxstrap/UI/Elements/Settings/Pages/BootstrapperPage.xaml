<ui:UiPage x:Class="Bloxstrap.UI.Elements.Settings.Pages.BehaviourPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:local="clr-namespace:Bloxstrap.UI.Elements.Settings.Pages"
      xmlns:controls="clr-namespace:Bloxstrap.UI.Elements.Controls"
      xmlns:models="clr-namespace:Bloxstrap.UI.ViewModels.Settings"
      xmlns:resources="clr-namespace:Bloxstrap.Resources"
      d:DataContext="{d:DesignInstance Type=models:BehaviourViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="800"
      Title="BehaviourPage"
      Scrollable="True">

    <StackPanel Margin="0,0,14,14">
        <TextBlock Margin="0,0,0,8" Text="{x:Static resources:Strings.Menu_Behaviour_Description}" FontSize="14" Foreground="{DynamicResource TextFillColorSecondaryBrush}" />

        <controls:OptionControl 
            Header="{x:Static resources:Strings.Menu_Behaviour_ConfirmLaunches_Title}"
            Description="{x:Static resources:Strings.Menu_Behaviour_ConfirmLaunches_Description}">
            <ui:ToggleSwitch IsChecked="{Binding ConfirmLaunches, Mode=TwoWay}" />
        </controls:OptionControl>

        <controls:OptionControl 
            Header="{x:Static resources:Strings.Menu_Behaviour_AllowCookieAccess_Title}"
            Description="{Binding Source={x:Static resources:Strings.Menu_Behaviour_AllowCookieAccess_Description}, Converter={StaticResource StringFormatConverter}, ConverterParameter='https://github.com/fishstrap/fishstrap/wiki/Account-Access#what-will-fishstrap-access-with-your-account'}"
            Visibility="{Binding UntilFishstrapReleases}">
            <StackPanel Orientation="Horizontal">
                <ui:SymbolIcon Symbol="Warning20" Margin="0,2,8,0" Foreground="Orange">
                    <ui:SymbolIcon.Style>
                        <Style TargetType="ui:SymbolIcon" BasedOn="{StaticResource {x:Type ui:SymbolIcon}}">
                            <Setter Property="Visibility" Value="Collapsed"/>

                            <Style.Triggers>
                                <DataTrigger Binding="{Binding DataContext.CookieLoadingFailed, RelativeSource={RelativeSource AncestorType=ui:UiPage}}" Value="True">
                                    <Setter Property="ui:SymbolIcon.Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ui:SymbolIcon.Style>
                </ui:SymbolIcon>
                <ui:ToggleSwitch IsChecked="{Binding CookieAccess, Mode=TwoWay}" />
            </StackPanel>
        </controls:OptionControl>

        <controls:OptionControl
            Header="{x:Static resources:Strings.Menu_Behaviour_OldRobloxIcon_Title}"
            Description="{x:Static resources:Strings.Menu_Behaviour_OldRobloxIcon_Description}">
            <ComboBox Width="200" Padding="10,5,10,5" ItemsSource="{Binding RobloxIcons, Mode=OneWay}" SelectedValuePath="IconType" SelectedValue="{Binding SelectedRobloxIcon, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="16" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image Height="16" Source="{Binding ImageSource, Mode=OneWay}" RenderOptions.BitmapScalingMode="HighQuality" />
                            <TextBlock Grid.Column="1" Margin="8,0,0,0" Text="{Binding Path=IconType, Converter={StaticResource EnumNameConverter}}" />
                        </Grid>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </controls:OptionControl>

        <controls:OptionControl
            Header="Uncap FPS"
            Description="Unlock your fps to go above 240.">
            <ui:ToggleSwitch Grid.Column="1" IsChecked="{Binding FramerateUncap, Mode=TwoWay}" />
        </controls:OptionControl>

        <ui:CardExpander
            Margin="0,8,0,0"
            IsExpanded="{Binding Path=MultiInstances, Mode=OneWay}"
            Style="{StaticResource NoUserExpansionCardExpanderStyle}">
            <ui:CardExpander.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock FontSize="14" Text="{x:Static resources:Strings.Menu_Behaviour_MultiInstances_Title}" />
                        <TextBlock FontSize="12" Text="{x:Static resources:Strings.Menu_Behaviour_MultiInstances_Description}" Foreground="{DynamicResource TextFillColorTertiaryBrush}"/>
                    </StackPanel>

                    <ui:ToggleSwitch Grid.Column="1" IsChecked="{Binding MultiInstances, Mode=TwoWay}" />
                </Grid>
            </ui:CardExpander.Header>

            <StackPanel Margin="0,8,0,0">
                <controls:OptionControl
                    Description="Automatically fixes error code 773 when teleporting between games with multiple accounts."
                    Header="Teleport Fix">
                    <ui:ToggleSwitch IsChecked="{Binding Error773Fix, Mode=TwoWay}" />
                </controls:OptionControl>

                <controls:OptionControl
                    Description="Launch multiple instances at once."
                    Header="MultiBlox">
                    <ui:Button Margin="12,0,0,0" Content="Open Multiblox" Padding="12,6" Click="OpenMultiblox_Click" />
                </controls:OptionControl>
            </StackPanel>
        </ui:CardExpander>

        <controls:OptionControl
            Header="{x:Static resources:Strings.Menu_Behaviour_ProcessPriority_Title}"
            Description="{x:Static resources:Strings.Menu_Behaviour_ProcessPriority_Description}">
            <ComboBox
                Width="200"
                Margin="5,0,0,0"
                Padding="10,5,10,5"
                ItemsSource="{Binding ProcessPriorityOptions, Mode=OneTime}"
                SelectedItem="{Binding SelectedPriority, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Converter={StaticResource EnumNameConverter}}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </controls:OptionControl>

        <controls:OptionControl 
            Header="{x:Static resources:Strings.Menu_Behaviour_BackgroundUpdates_Title}"
            Description="{x:Static resources:Strings.Menu_Behaviour_BackgroundUpdates_Description}">
            <ui:ToggleSwitch IsChecked="{Binding BackgroundUpdates, Mode=TwoWay}" />
        </controls:OptionControl>

        <ui:CardExpander Margin="0,8,0,0">
            <ui:CardExpander.Header>
                <StackPanel Grid.Column="0">
                    <TextBlock FontSize="14" Text="Memory Optimization" />
                    <TextBlock FontSize="12" Text="Optimizations for your memory usage." Foreground="{DynamicResource TextFillColorTertiaryBrush}" />
                </StackPanel>
            </ui:CardExpander.Header>

            <StackPanel>
                <controls:OptionControl 
                    Header="{x:Static resources:Strings.Menu_Behaviour_CloseCrashHandler_Title}"
                    Description="{x:Static resources:Strings.Menu_Behaviour_CloseCrashHandler_Description}">
                    <ui:ToggleSwitch IsChecked="{Binding CloseCrashHandler, Mode=TwoWay}" />
                </controls:OptionControl>
                
                <controls:OptionControl
                    Description="Trim Roblox memory to lower its memory usage."
                    Header="Memory Trim">
                    <ui:ToggleSwitch IsChecked="{Binding EnableRobloxTrim, Mode=TwoWay}" />
                </controls:OptionControl>

                <controls:OptionControl 
                    Visibility="{Binding EnableRobloxTrim, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Description="How often (in seconds) to trim Roblox memory, Lower values use more CPU."
                    Header="Memory Trim Interval">
                    <ui:TextBox Text="{Binding RobloxTrimSeconds, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="150" />
                </controls:OptionControl>

                <controls:OptionControl
                    Description="Clean up your entire system memory."
                    Header="System Memory Cleaner">
                    <ComboBox 
                        Width="200" 
                        Padding="10,5,10,5" 
                        ItemsSource="{Binding MemoryCleanerIntervals, Mode=OneTime}" 
                        SelectedItem="{Binding MemoryCleanerInterval, Mode=TwoWay}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource EnumNameConverter}}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </controls:OptionControl>

                <ui:CardExpander Margin="0,8,0,0" Visibility="{Binding MemoryCleanerExclusionsExpanded, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ui:CardExpander.Header>
                        <StackPanel Grid.Column="0">
                            <TextBlock FontSize="14" Text="Process Exclusions" />
                            <TextBlock FontSize="12" Text="Exclude processes from memory cleaning." Foreground="{DynamicResource TextFillColorTertiaryBrush}" />
                        </StackPanel>
                    </ui:CardExpander.Header>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <ListBox 
                            x:Name="ProcessExclusionsListBox"
                            Height="300" 
                            Grid.Row="0" 
                            Grid.Column="0" 
                            Margin="0,2,4,0" 
                            ItemsSource="{Binding UserExcludedProcesses, Mode=OneWay}"
                            SelectedItem="{Binding SelectedProcess, Mode=TwoWay}"
                            ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center" Margin="4,1" TextTrimming="CharacterEllipsis" />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="4,0,0,0">
                            <TextBlock Text="Add Process Exclusion" Foreground="{DynamicResource TextFillColorSecondaryBrush}" />

                            <ui:TextBox 
                                x:Name="ProcessNameTextBox"
                                Margin="0,4,0,0" 
                                PlaceholderText="Enter process name (e.g., notepad)"
                                Text="{Binding NewProcessName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                            <Grid Margin="0,8,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <ui:Button Grid.Column="0"
                                    Margin="0,0,4,0" 
                                    Icon="Add28" 
                                    Content="Add Exclusion" 
                                    HorizontalAlignment="Stretch"
                                    Click="AddProcessExclusion_Click" />
                            </Grid>

                            <StackPanel Margin="0,16,0,0">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsProcessSelected}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>

                                <TextBlock Text="Edit Selected Process" Foreground="{DynamicResource TextFillColorSecondaryBrush}" />

                                <ui:TextBox 
                                    x:Name="EditProcessNameTextBox"
                                    Margin="0,4,0,0" 
                                    PlaceholderText="Edit process name"
                                    Text="{Binding EditProcessName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                <Grid Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <ui:Button Grid.Column="0"
                                        Margin="0,0,4,0" 
                                        Icon="Save28" 
                                        Content="Save Changes" 
                                        HorizontalAlignment="Stretch"
                                        Click="SaveProcessEdit_Click" />
                                    
                                    <ui:Button Grid.Column="1"
                                        Margin="4,0,0,0" 
                                        Icon="Delete28" 
                                        Content="Remove Selected" 
                                        HorizontalAlignment="Stretch" 
                                        Appearance="Danger" 
                                        Click="RemoveSelectedProcessExclusion_Click" />
                                </Grid>
                            </StackPanel>

                            <TextBlock 
                                Margin="0,16,0,0"
                                FontSize="11" 
                                Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                Text="Excluded processes will not have their memory cleaned. Process names are case-insensitive."
                                TextWrapping="Wrap" />
                        </StackPanel>
                    </Grid>
                </ui:CardExpander>
            </StackPanel>
        </ui:CardExpander>

        <ui:CardExpander Grid.Row="1" Margin="0,8,0,0" IsExpanded="True">
            <ui:CardExpander.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock FontSize="14" Text="{x:Static resources:Strings.Menu_Bootstrapper_CleanUp_Title}" />
                        <TextBlock Margin="0,2,0,0" FontSize="12" Text="{x:Static resources:Strings.Menu_Bootstrapper_CleanUp_Description}" Foreground="{DynamicResource TextFillColorTertiaryBrush}" />
                    </StackPanel>
                </Grid>
            </ui:CardExpander.Header>

            <StackPanel>
                <controls:OptionControl 
                    Header="{x:Static resources:Strings.Menu_Bootstrapper_Cleaner_Age_Title}" 
                    Description="{x:Static resources:Strings.Menu_Bootstrapper_Cleaner_Age_Description}">
                    <ComboBox Width="200" Padding="10,5,10,5" ItemsSource="{Binding CleanerOptions, Mode=OneTime}" Text="{Binding CleanerOption, Mode=TwoWay}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=., Converter={StaticResource EnumNameConverter}}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </controls:OptionControl>
                <controls:OptionControl 
                    Header="{x:Static resources:Strings.Menu_Bootstrapper_Cleaner_Cache_Title}" 
                    Description="{x:Static resources:Strings.Menu_Bootstrapper_Cleaner_Cache_Description}">
                    <ui:ToggleSwitch IsChecked="{Binding CleanerCache, Mode=TwoWay}" />
                </controls:OptionControl>
                <controls:OptionControl 
                    Header="{x:Static resources:Strings.Menu_Bootstrapper_Cleaner_Logs_Title}" 
                    Description="{x:Static resources:Strings.Menu_Bootstrapper_Cleaner_Logs_Description}">
                    <ui:ToggleSwitch IsChecked="{Binding CleanerLogs, Mode=TwoWay}" />
                </controls:OptionControl>
                <controls:OptionControl 
                    Header="{x:Static resources:Strings.Menu_Bootstrapper_Cleaner_IncludeBloxstrap_Title}"
                    Description="{x:Static resources:Strings.Menu_Bootstrapper_Cleaner_IncludeBloxstrap_Description}">
                    <ui:ToggleSwitch IsChecked="{Binding CleanerFroststrap, Mode=TwoWay}" />
                </controls:OptionControl>
            </StackPanel>
        </ui:CardExpander>
    </StackPanel>
</ui:UiPage>
