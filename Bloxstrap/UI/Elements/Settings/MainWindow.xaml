<base:WpfUiWindow x:Class="Bloxstrap.UI.Elements.Settings.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pages="clr-namespace:Bloxstrap.UI.Elements.Settings.Pages"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:base="clr-namespace:Bloxstrap.UI.Elements.Base"
             xmlns:resources="clr-namespace:Bloxstrap.Resources"
             xmlns:dmodels="clr-namespace:Bloxstrap.UI.ViewModels.Settings"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance dmodels:MainWindowViewModel, IsDesignTimeCreatable=True}"
             Title="{x:Static resources:Strings.Menu_Title}"
             MinWidth="250"
             Width="1125"
             MinHeight="250"
             Height="700"
             Background="{ui:ThemeResource ApplicationBackgroundBrush}"
             ExtendsContentIntoTitleBar="True"
             WindowBackdropType="{Binding SelectedBackdrop}"
             WindowStartupLocation="CenterScreen"
             Closing="WpfUiWindow_Closing"
             Closed="WpfUiWindow_Closed">

    <Grid Background="{DynamicResource WindowBackgroundGradient}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid x:Name="ImageBackgroundLayer" Grid.RowSpan="3" Panel.ZIndex="-1" Visibility="{Binding IsImageMode, Converter={StaticResource BooleanToVisibilityConverter}}" IsHitTestVisible="False">
            <Image x:Name="AnimatedGifBackground" Visibility="Collapsed" IsHitTestVisible="False" />
            <Border x:Name="StaticImageBackground" Background="{DynamicResource WindowBackgroundImage}" IsHitTestVisible="False" />
            <Border Background="{DynamicResource WindowBackgroundBlackOverlay}" IsHitTestVisible="False" />
        </Grid>

        <ui:Snackbar
            x:Name="AlreadyRunningSnackbar"
            Title="{x:Static resources:Strings.Menu_AlreadyRunning_Title}"
            Message="{x:Static resources:Strings.Menu_AlreadyRunning_Caption}"
            Background="{DynamicResource NormalDarkAndLightBackground}" Icon="Info20" Timeout="10000" Margin="200,0,200,40" Grid.RowSpan="10" Panel.ZIndex="10" />

        <ui:Snackbar
            x:Name="SettingsSavedSnackbar"
            Title="{x:Static resources:Strings.Menu_SettingsSaved_Title}"
            Message="{x:Static resources:Strings.Menu_SettingsSaved_Message}"
            Appearance="Success" Icon="CheckmarkCircle32" Timeout="3000" Margin="200,0,200,40" Grid.RowSpan="10" Panel.ZIndex="9" />

        <ui:TitleBar Padding="8" x:Name="RootTitleBar" Grid.Row="0" ForceShutdown="False" MinimizeToTray="False" UseSnapLayout="True" Title="{x:Static resources:Strings.Menu_Title}" Icon="pack://application:,,,/Bloxstrap.ico" />

        <Grid x:Name="RootGrid" Grid.Row="1" Margin="10,8,0,0" Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ui:NavigationCompact x:Name="RootNavigation" Grid.Row="1" Grid.Column="0" Margin="0,0,12,0" Frame="{Binding ElementName=RootFrame}" IsExpanded="{Binding IsSidebarExpanded, Mode=TwoWay}" MaxWidth="215" SelectedPageIndex="0">
                <ui:NavigationCompact.Items>
                    <ui:NavigationItem Content="{x:Static resources:Strings.Menu_Integrations_Title}" PageType="{x:Type pages:IntegrationsPage}" Icon="Add28" IconSize="20" Tag="integrations" FontWeight="Medium" />
                    <ui:NavigationItem Content="{x:Static resources:Strings.Menu_Behaviour_Title}" PageType="{x:Type pages:BehaviourPage}" Icon="PlaySettings20" IconSize="20" Tag="bootstrapper" FontWeight="Medium" />
                    <ui:NavigationItem Content="{x:Static resources:Strings.Menu_Mods_Title}" PageType="{x:Type pages:ModsPage}" Icon="WrenchScrewdriver20" IconSize="20" Tag="mods" FontWeight="Medium" />
                    <ui:NavigationItem Content="{x:Static resources:Strings.Menu_FastFlags_Title}" PageType="{x:Type pages:FastFlagsPage}" Icon="Flag24" IconSize="20" Tag="fastflags" FontWeight="Medium" />
                    <ui:NavigationItem Content="{x:Static resources:Strings.Menu_FastFlagEditor_Title}" PageType="{x:Type pages:FastFlagEditorPage}" Icon="EditSettings20" IconSize="20" Tag="fastflagEditor" FontWeight="Medium" />
                    <ui:NavigationItem Content="{x:Static resources:Strings.Menu_Appearance_Title}" PageType="{x:Type pages:AppearancePage}" Icon="PaintBrush24" IconSize="20" Tag="appearance" FontWeight="Medium" />
                    <ui:NavigationItem Content="Region Selector" PageType="{x:Type pages:RegionSelectorPage}" Icon="Earth24" IconSize="20" Tag="regionselector" FontWeight="Medium" />
                    <ui:NavigationItem Content="{x:Static resources:Strings.Common_Shortcuts}" PageType="{x:Type pages:ShortcutsPage}" Icon="Apps28" IconSize="20" Tag="shortcuts" FontWeight="Medium" />
                </ui:NavigationCompact.Items>
                <ui:NavigationCompact.Footer>
                    <ui:NavigationItem Content="Roblox Settings" PageType="{x:Type pages:RobloxSettingsPage}" Icon="SquareHintApps24" IconSize="20" Tag="RobloxSettings" FontWeight="Medium" x:Name="gbs" />
                    <ui:NavigationItem Content="{x:Static resources:Strings.Common_Settings}" PageType="{x:Type pages:ChannelPage}" Icon="Settings20" IconSize="20" Tag="channel" FontWeight="Medium" />
                    <ui:NavigationItem Content="{x:Static resources:Strings.Menu_About_Title}" Icon="WeatherSnowflake48" IconSize="21" Margin="0,0,0,12" Command="{Binding OpenAboutCommand, Mode=OneTime}" FontWeight="Medium" />
                </ui:NavigationCompact.Footer>

            </ui:NavigationCompact>

            <Grid Grid.Row="0" Grid.RowSpan="2" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <ui:InfoBar x:Name="AlertBar" Grid.Row="0" Margin="0,0,12,0" Padding="8" Visibility="Collapsed" IsOpen="True" Message="" Severity="Warning" IsClosable="False" />
                <ui:Breadcrumb Grid.Row="1" Margin="0,0,0,5" Navigation="{Binding ElementName=RootNavigation}" />
                <Frame x:Name="RootFrame" Grid.Row="2" />
            </Grid>
        </Grid>

        <StatusBar x:Name="RootStatusBar"
           Grid.Row="2"
           Padding="12,6"
           BorderThickness="0,1,0,0">

            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>

            <!-- Test Mode -->
            <StatusBarItem Grid.Column="0" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,12,0">
                    <ui:ToggleSwitch IsChecked="{Binding TestModeEnabled, Mode=TwoWay}" Height="22" VerticalAlignment="Center" />
                    <TextBlock Text="{x:Static resources:Strings.Menu_TestMode}"
                       FontSize="13.5"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"
                       FontWeight="Medium"
                       Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                </StackPanel>
            </StatusBarItem>

            <!-- Save & Launch -->
            <StatusBarItem Grid.Column="2" VerticalAlignment="Center" Margin="0,0,4,0">
                <ui:Button Content="{x:Static resources:Strings.Menu_SaveAndLaunch}"
                   Appearance="Primary"
                   Height="32"
                   FontWeight="Medium"
                   Padding="14,0"
                   Command="{Binding SaveAndLaunchSettingsCommand}" />
            </StatusBarItem>

            <!-- Restart -->
            <StatusBarItem Grid.Column="3" VerticalAlignment="Center" Margin="0,0,4,0">
                <ui:Button Content="Restart"
               Height="32"
               Padding="14,0"
               FontWeight="Medium"
               Appearance="Primary"
               Command="{Binding RestartAppCommand}" />
            </StatusBarItem>

            <!-- Save -->
            <StatusBarItem Grid.Column="4" VerticalAlignment="Center" Margin="0,0,4,0">
                <ui:Button Content="{x:Static resources:Strings.Menu_Save}"
                   Appearance="Primary"
                   Height="32"
                   Padding="14,0"
                   FontWeight="Medium"
                   Command="{Binding SaveSettingsCommand}" />
            </StatusBarItem>

            <!-- Close -->
            <StatusBarItem Grid.Column="5" VerticalAlignment="Center" Margin="0,0,0,0">
                <ui:Button Content="{x:Static resources:Strings.Common_Close}"
                   Height="32"
                   Padding="14,0"
                   FontWeight="Medium"
                   Command="{Binding CloseWindowCommand}" />
            </StatusBarItem>
        </StatusBar>

        <Grid x:Name="LoadingOverlay"
              Visibility="Collapsed"
              Background="#80000000"
              Panel.ZIndex="9999"
              Grid.RowSpan="3"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">

            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border Background="{DynamicResource NormalDarkAndLightBackground}"
                CornerRadius="16"
                Padding="32"
                Effect="{DynamicResource ControlShadow}">
                    <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Vertical">

                        <!-- Loading Text -->
                        <TextBlock x:Name="LoadingOverlayText"
                           Text="Loading..."
                           FontSize="22"
                           FontWeight="SemiBold"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}" />

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                            <Ellipse Width="12" Height="12" Fill="{DynamicResource TextFillColorPrimaryBrush}" Margin="0,0,8,0">
                                <Ellipse.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever" AutoReverse="True" >
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.3" To="1" Duration="0:0:0.6" BeginTime="0:0:0" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Ellipse.Triggers>
                            </Ellipse>
                            <Ellipse Width="12" Height="12" Fill="{DynamicResource TextFillColorPrimaryBrush}" Margin="0,0,8,0">
                                <Ellipse.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever" AutoReverse="True" >
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.3" To="1" Duration="0:0:0.6" BeginTime="0:0:0.2" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Ellipse.Triggers>
                            </Ellipse>
                            <Ellipse Width="12" Height="12" Fill="{DynamicResource TextFillColorPrimaryBrush}">
                                <Ellipse.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever" AutoReverse="True" >
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.3" To="1" Duration="0:0:0.6" BeginTime="0:0:0.4" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Ellipse.Triggers>
                            </Ellipse>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</base:WpfUiWindow>