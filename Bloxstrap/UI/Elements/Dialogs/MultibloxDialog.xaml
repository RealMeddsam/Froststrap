<base:WpfUiWindow x:Class="Bloxstrap.UI.Elements.Dialogs.MultibloxDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:base="clr-namespace:Bloxstrap.UI.Elements.Base"
        mc:Ignorable="d"
        Title="Multiblox"
        Width="400"
        Height="300"
        MinWidth="380"
        MinHeight="280"
        Background="{ui:ThemeResource ApplicationBackgroundBrush}"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica"
        WindowStartupLocation="CenterOwner">

    <Grid Background="{DynamicResource WindowBackgroundGradient}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ui:TitleBar Grid.Row="0"
                     Padding="8"
                     Title="Multiblox"
                     Icon="pack://application:,,,/Bloxstrap.ico"
                     ShowMinimize="False"
                     ShowMaximize="False"
                     CanMaximize="False" />

        <StackPanel Grid.Row="1" Margin="16">
            <TextBlock Text="Launch multiple Roblox instances with a custom delay."
                       FontSize="14"
                       Foreground="{DynamicResource TextFillColorSecondaryBrush}" />

            <StackPanel Margin="0,14,0,0">
                <TextBlock Text="Instance Count"
                           FontSize="13" />
                <StackPanel Orientation="Horizontal" Margin="0,6,0,0" VerticalAlignment="Center">
                    <Slider Width="260"
                            Minimum="1"
                            Maximum="10"
                            TickFrequency="1"
                            IsSnapToTickEnabled="True"
                            Value="{Binding InstanceCount, Mode=TwoWay}" />
                    <TextBlock Margin="12,0,0,0"
                               FontSize="13"
                               VerticalAlignment="Center"
                               Text="{Binding InstanceCount}" />
                </StackPanel>
            </StackPanel>

            <StackPanel Margin="0,14,0,0">
                <TextBlock Text="Delay Between Starts (ms)"
                           FontSize="13" />
                <StackPanel Orientation="Horizontal" Margin="0,6,0,0" VerticalAlignment="Center">
                    <Slider Width="260"
                            Minimum="0"
                            Maximum="15000"
                            TickFrequency="500"
                            Value="{Binding DelayMs, Mode=TwoWay}" />
                    <TextBlock Margin="12,0,0,0"
                               FontSize="13"
                               VerticalAlignment="Center"
                               Text="{Binding DelayMs}" />
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <ui:Button Content="Start"
                           Appearance="Primary"
                           Padding="16,8"
                           MinWidth="100"
                           Command="{Binding LaunchCommand}"
                           IsEnabled="{Binding IsIdle}" />
                <ui:Button Content="Stop"
                           Margin="8,0,0,0"
                           Padding="16,8"
                           MinWidth="100"
                           Command="{Binding CancelCommand}"
                           IsEnabled="{Binding IsLaunching}" />
            </StackPanel>

            <TextBlock Margin="0,12,0,0"
                       FontSize="12"
                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                       Text="{Binding StatusText}" />
        </StackPanel>
    </Grid>
</base:WpfUiWindow>